        </OutputVariable>
        <OutputVariable>
            <Name>Prcp</Name>
            <Title>Prcp</Title>
            <Units>mm</Units>
            <Description>Mean of total precipitation</Description>
            <TimeMode>4 0</TimeMode>
            <Precision>4</Precision>
        </OutputVariable>
        <OutputVariable>
            <Name>PET</Name>
            <Title>PET</Title>
            <Units>mm</Units>
            <Description>Mean of total evapotranspiration</Description>
            <TimeMode>4 0</TimeMode>
            <Precision>4</Precision>
        </OutputVariable>
        <OutputVariable>
            <Name>Balance</Name>
            <Title>Balance</Title>
            <Units>mm</Units>
            <Description>Prcp-PET</Description>
            <TimeMode>4 0</TimeMode>
            <Precision>4</Precision>
        </OutputVariable>
        <OutputVariable>
            <Name>SPEI</Name>
            <Title>SPEI</Title>
            <Units/>
            <Description>Standardised Precipitation Evapotranspiration Index</Description>
            <TimeMode>4 0</TimeMode>
            <Precision>4</Precision>
        </OutputVariable>
    </OutputVariableArray>
